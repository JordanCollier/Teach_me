<!DOCTYPE html>
<html>
<head>
  <title>Challenger Approaches</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script src="https://maps.googleapis.com/maps/api/js?key=#{Rails.application.secrets.gmaps_api_key}"
  type="text/javascript"></script>
</head>
<body>

  <header class="backin">
    <div class="smashin"></div>
    <div class="smashin-overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1 class="front-title">Challenger Approaches<p class="lead">Smash Bros. Group Locator</p></h1>
        </div>
      </div>
    </div>
  </header>


  <!-- Begin Navbar -->
  <div id="nav">
    <div class="navbar navbar-inverse navbar-static">
      <div class="container">
        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="glyphicon glyphicon-bar"></span>
          <span class="glyphicon glyphicon-bar"></span>
          <span class="glyphicon glyphicon-bar"></span>
        </a>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li> <%= link_to "Home", root_path %> </li>
            <li class="divider"></li>
            <% if current_user != nil %>
            <li> <%= link_to "Profile", user_path(current_user.id) %> </li>
            <li> <%= link_to "Groups", groups_path %> </li>

          </ul>
          <form class="navbar-form" action="/find_groups" method="get">
            <input type="text" class="form-control" id="main-search" placeholder="Search" name="[find_groups_q]">
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
          </form>
          <ul class="nav pull-right navbar-nav">
            <li> <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> </li>
            <!-- <li>
              <a href="#"><i class="glyphicon glyphicon-flag"></i> <span class="badge">2</span></a>
            </li> -->
          </ul>
          <% else %>
          </ul>
          <ul class="nav pull-right navbar-nav">
          <li> <%= link_to "Sign up", new_user_registration_path %> </li>
          <li> <%= link_to "Sign in", new_user_session_path %> </li>
        </ul>
          <% end %>
        </div>
      </div>
    </div><!-- /.navbar -->
  </div>


  <div class="container" id="TOP_SPACING">
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <%= yield %>
  <!-- </div> -->

    <!-- <div class="container"> -->
      <footer>
        <div class="row">
          <div class="col-md-6">
            <a href="about">About</a>
            |
            <a href="terms">Terms</a>
            |
            <a href="faq">FAQ</a>
            |
            <a href="tasks">Tasks</a>
          </div>
          <div class="col-md-6 text-right">
            <a href="https://www.linkedin.com/in/jordanicollier">
              <%= image_tag"linked.jpg", class: "img-footer" %>
            </a>
            <a href="https://github.com/JordanCollier">
              <%= image_tag"github.png", class: "img-footer" %>
            </a>
            <a href="https://twitter.com/JordanICollier">
              <%= image_tag"twitter.png", class: "img-footer" %>
            </a>
            <a href="https://students.gschool.it/students/206">
              <%= image_tag "galvanize.png", class: "img-footer" %>
            </a>
          </div>
        </div>
      </footer>
      <!-- footer stuff here -->
    </div>

</body>
</html>
